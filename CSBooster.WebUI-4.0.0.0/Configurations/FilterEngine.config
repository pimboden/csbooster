        </object>
        <object type="_4screen.CSB.DataAccess.Business.DataObjectCommunity">
            <property name="Title"/>
            <property name="Description"/>
            <property name="DescriptionMobile"/>
        </object>
        <object type="_4screen.CSB.DataAccess.Business.DataObjectPicture">
            <property name="Title"/>
            <property name="Description"/>
            <property name="DescriptionMobile"/>
        </object>
        <object type="_4screen.CSB.DataAccess.Business.DataObjectArticle">
            <property name="Title"/>
            <property name="Description"/>
            <property name="DescriptionMobile"/>
