    <badWordFilter>
        <object type="_4screen.CSB.DataAccess.Business.DataObjectVideo">
            <property name="Title"/>
            <property name="Description"/>
            <property name="DescriptionMobile"/>
        </object>
        <object type="_4screen.CSB.DataAccess.Business.DataObjectAudio">
            <property name="Title"/>
            <property name="Description"/>
